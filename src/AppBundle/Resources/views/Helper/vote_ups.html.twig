{% if list is not empty %}
	<div class="well well-lg col-xs-12">
		<h4>Les tops mots nouchi</h4>
		<hr>

		{% for entry in list %}
			<div class="col-xs-12">
				<div class="col-md-6">
					<h5><a href="{{url('app_dictionary_entry', {'id':entry.id})}}">{{ entry.word|capitalize }}</a></h5>
				</div>
				<div class="col-md-6 text-right">
					<h5>
						<a>
							{{ entry.voteUps|length|default("0")}}
							<i class="fa fa-thumbs-up" aria-hidden="true"></i>
						</a>
					</h5>
				</div>
			</div>
		{% endfor %}
	</div>
{% endif %}