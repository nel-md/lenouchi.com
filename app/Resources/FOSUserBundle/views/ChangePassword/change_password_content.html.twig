{% trans_default_domain 'FOSUserBundle' %}

<div class="container" style="margin-top:15px">
	
 	<div class="row">
  		<div class="col-md-8 col-md-offset-2 col-xs-12">
  			<h3>Modifier mon mot de passe</h3>
			<hr>
   			<div class="well well-lg">
				<div class="control-group form-group">
					{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
					
					<div class="text-left" style="margin-bottom:15px">
					    {{ form_label(form.current_password) }}
					    {{ form_errors(form.current_password) }}
					    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe', 'required': 'required', 'data-validation-required-message':'Mot de passe actuel'} }) }}
					</div>
					<div class="text-left" style="margin-bottom:15px">
					    {{ form_label(form.plainPassword['first']) }}
					    {{ form_errors(form.plainPassword['first']) }}
					    {{ form_widget(form.plainPassword['first'], { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe', 'required': 'required', 'data-validation-required-message':'Veuillez renseigner le nouveau mot de passe'} }) }}
					</div>
					<div class="text-left" style="margin-bottom:15px">
					    {{ form_label(form.plainPassword['second']) }}
					    {{ form_errors(form.plainPassword['second']) }}
					    {{ form_widget(form.plainPassword['second'], { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe', 'required': 'required', 'data-validation-required-message':'Veuillez confirmer le nouveau mot de passe'} }) }}
					</div>
					{{ form_widget(form) }}
					<div class="text-center">
						<a href="{{url('fos_user_profile_show')}}" class="btn btn-default">Retour</a>
						<input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-primary" />
					</div>
					
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
</div>

